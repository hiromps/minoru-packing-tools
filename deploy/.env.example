# Example Environment Variables
# Copy this file to .env.production and fill in your values
# =============================================

# Application Environment
ENVIRONMENT=production
APP_VERSION=3.0.0
APP_NAME=minoru-packing-tools

# Security Settings (REQUIRED - Change these values!)
SECRET_KEY=change-this-to-a-secure-random-string-at-least-32-characters-long
SECURITY_SALT=change-this-to-another-secure-random-string

# Database Configuration (Optional - only if using database)
DB_HOST=your-database-host
DB_PORT=5432
DB_NAME=minoru_packing
DB_USER=your-db-username
DB_PASSWORD=your-db-password

# Redis Cache Configuration (Optional - improves performance)
REDIS_URL=redis://your-redis-host:6379/0
CACHE_TTL=3600

# Logging Configuration
LOG_LEVEL=WARNING
LOG_DIR=/var/log/minoru-packing
MAX_LOG_SIZE=52428800
LOG_BACKUP_COUNT=10

# Performance Settings
MAX_WORKERS=4
CALCULATION_TIMEOUT=20
ENABLE_PARALLEL_PROCESSING=true
ENABLE_CACHING=true

# File Upload Settings
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png

# Rate Limiting
RATE_LIMIT_PER_MINUTE=30

# Monitoring & Analytics (Optional)
ENABLE_MONITORING=false
ANALYTICS_ENDPOINT=

# External Services (Optional)
SHIPPING_API_KEY=
NOTIFICATION_WEBHOOK=

# SSL/TLS Settings (Optional - for HTTPS)
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Backup Settings (Optional)
BACKUP_ENABLED=false
BACKUP_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-1

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10